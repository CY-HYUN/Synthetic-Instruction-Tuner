{
  "models": {
    "data_generation": "meta-llama/Llama-3.1-8B-Instruct",
    "sft_base": "meta-llama/Llama-3.2-3B",
    "fine_tuning": "meta-llama/Llama-3.2-3B",
    "reward_model": "OpenAssistant/reward-model-deberta-v3-large-v2"
  },
  "data_generation": {
    "target_raw_samples": 1500,
    "target_filtered_samples": 1000,
    "target_preference_pairs": 600,
    "checkpoint_interval": 100,
    "temperature": 1.0,
    "max_new_tokens": 512
  },
  "quality_filter": {
    "min_instruction_words": 3,
    "max_instruction_words": 500,
    "min_response_words": 10,
    "max_response_words": 2000,
    "min_quality_score": 0.5,
    "max_repetition_ratio": 0.3
  },
  "preference_generation": {
    "target_pairs": 600,
    "checkpoint_interval": 100,
    "num_responses_per_instruction": 3,
    "response_models": [
      "meta-llama/Llama-3.2-1B-Instruct",
      "mistralai/Mistral-7B-Instruct-v0.1",
      "Qwen/Qwen2.5-3B-Instruct"
    ],
    "temperature": 0.9,
    "max_new_tokens": 512,
    "top_p": 0.9
  },
  "training": {
    "sft_epochs": 3,
    "sft_batch_size": 12,
    "sft_learning_rate": 0.0002,
    "sft_warmup_ratio": 0.03,
    "sft_max_seq_length": 2048,
    "dpo_epochs": 1,
    "dpo_batch_size": 8,
    "dpo_learning_rate": 5e-05,
    "dpo_beta": 0.1,
    "dpo_warmup_ratio": 0.1,
    "dpo_max_seq_length": 1024,
    "gradient_accumulation_steps": 2,
    "train_split": 0.8,
    "val_split": 0.2,
    "lora_r": 8,
    "lora_alpha": 16,
    "lora_dropout": 0.05,
    "lora_target_modules": [
      "q_proj",
      "k_proj",
      "v_proj",
      "o_proj",
      "gate_proj",
      "up_proj",
      "down_proj"
    ],
    "lora_bias": "none",
    "prompt_tuning_num_virtual_tokens": 20,
    "prompt_tuning_epochs": 3,
    "prompt_tuning_batch_size": 12,
    "prompt_tuning_gradient_accumulation": 2,
    "prompt_tuning_learning_rate": 0.0003,
    "prompt_tuning_warmup_ratio": 0.03
